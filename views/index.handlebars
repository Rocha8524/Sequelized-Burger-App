<div class="container">
    <div class="row">
        <div class="col-md-12 , text-center">
            <br>
            <img src="https://media.giphy.com/media/10eqvP7UGR34TC/giphy.gif" alt="Munching on those burgers"
                width="450" height="250">
            <br>
            <br>
            <h2 id="title">Eat-That-Burger Baby</h2>
        </div>
    </div>
    <hr>

    <div class="row">
        <div class="col-md-6 , text-center">
            <h3 id="pick-up">Burgers ready for pick-up</h3>
            <img src="https://media.giphy.com/media/zNsrnGVpCJMOc/giphy.gif" alt="Enjoy your burger" width="300"
                height="200">
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <br>
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn btn-primary" type="submit">Let's Get Eating</button>
                    </form>
                    <br>
                    <form action="/{{this.id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="delete" value="{{this.id}}">
                        <button class="btn btn-primary" type="submit">Cancel the order</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 , text-center">
            <h3 id="eaten">Burgers ordered & eaten</h3>
            <img src="https://media.giphy.com/media/XbAYSN0jUBQbe/giphy.gif" alt="Eat them all" width="300"
                height="200">
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>

    <hr>

    <div class="row , text-center">
        <div class="col-md-12">

            <h3 id="add-burger">Add a Burger</h3>
            <img src="https://media.giphy.com/media/ud6EmjRF8CICI/giphy.gif" alt="Make that burger" width="400"
                height="300">

            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <p>Enter a burger you want to order and the click the submit button when you made your choice. Hope
                        you enjoy the burger you ordered</p>
                    <input type="text" id="burger-order" name="burger_name">
                </div>
                <button type="submit" class="btn btn-primary">Submit Your Order</button>
            </form>
        </div>
    </div><br>

    <footer class="jumbotron , text-center">
        <h2>Â© 2019 Alexander Rocha</h2>
    </footer>

</div>